@model HospitalApplication.Models.ViewModels.UpdateDonation
@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <h2 class="text-center">Update Donation</h2>
        <form class="form-horizontal" action="/Donation/Update/@Model.SelectedDonation.DonationID" method="POST">
            <div style="display:none;">
                @* Pass through the Donation ID *@
                <input type="text" name="DonationID" value="@Model.SelectedDonation.DonationID">
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="DonationDescription">Donor</label>
                <div class="col-sm-6">

                    <select class="form-control" name="DonorID">

                        @foreach (var donor in Model.DonorOptions)
                        {
                            <option class="form-control" value="@donor.DonorID">@donor.DonorName</option>
                        }
                    </select>

                </div>
                <a class="btn btn-primary col-sm-3" href="/Donor/New" role="button">Add a Donor</a>

            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="DonationDescription">Department</label>
                <div class="col-sm-6">

                    <select class="form-control" name="DeptID">

                        @foreach (var department in Model.DepartmentOptions)
                        {
                            <option class="form-control" value="@department.DeptID">@department.DeptName</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="DonationAmount">Amount</label>
                <div class="col-sm-6">
                    <input class="form-control" type="number" id="DonationAmount" name="DonationAmount" value="@Model.SelectedDonation.DonationAmount">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="DonationDate">Date</label>
                <div class="col-sm-6">
                    <input class="form-control" type="date" id="DonationDate" name="DonationDate" value="@Model.SelectedDonation.DonationDate.ToString("yyyy-MM-dd")">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="DonationDescription">Description</label>
                <div class="col-sm-6">
                    <textarea class="form-control" type="text" id="DonationDescription" name="DonationDescription" value="@Model.SelectedDonation.DonationDescription" rows="5"></textarea>
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-6">
                    <button class="btn btn-default" type="submit">Update Donation</button>
                </div>
            </div>
        </form>
    </div>
</div>
