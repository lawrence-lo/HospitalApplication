@model IEnumerable<HospitalApplication.Models.PostDto>
@{
    ViewBag.Title = "List of posts";
}

<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <h2 class="text-center">List of posts</h2>
        <div class="text-right"><a class="btn btn-default" href="/Post/New" role="button">New Post</a></div>
        @foreach (var post in Model)
        {
            string TruncatedContent = post.Content.Substring(0, 100) + "...";
            <div class="list-group text-left">
                <a href="/Post/Details/@post.PostID" class="list-group-item">
                    <h4 class="list-group-item-heading">@post.Title</h4>
                    <p class="list-group-item-text">@TruncatedContent</p>
                    <p class="text-right">@post.DateCreated.ToString("MMM dd, yyyy")</p>
                </a>
            </div>
        }
    </div>
</div>