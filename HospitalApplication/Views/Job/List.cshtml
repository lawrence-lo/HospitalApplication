@model IEnumerable<HospitalApplication.Models.JobDto>
@{
    ViewBag.Title = "List of jobs";
}

<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <h2 class="text-center">List of jobs</h2>
        <div class="text-right"><a class="btn btn-default" href="/Job/New" role="button">New Job</a></div>
        @foreach (var job in Model)
        {
            <div class="list-group text-center">
                <a href="/Job/Details/@job.JobID" class="list-group-item">
                    <h4 class="list-group-item-heading">@job.JobName</h4>
                    <p class="list-group-item-text">@job.DeptName</p>
                    <p class="list-group-item-text">@job.JobDescription</p>
                </a>
            </div>
        }
    </div>
</div>
