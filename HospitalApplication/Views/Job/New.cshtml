@model IEnumerable<HospitalApplication.Models.DepartmentDto>

@{
    ViewBag.Title = "New Job";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <h2 class="text-center">New Job</h2>
        <form class="form-horizontal" action="/Job/Create" method="POST">
            <div class="form-group">
                <label class="col-sm-4 control-label" for="JobName">Name</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" id="JobName" name="JobName">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="DeptID">Department</label>
                <div class="col-sm-8">
                    <select name="DeptID">
                        @foreach (var department in Model)
                        {
                            <option value="@department.DeptID">@department.DeptName</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="JobDescription">Description</label>
                <div class="col-sm-8">
                    <textarea class="form-control" id="JobDescription" name="JobDescription" rows="5"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <button class="btn btn-default" type="submit">Add Job</button>
                </div>
            </div>
        </form>
    </div>
</div>

