@model IEnumerable<HospitalApplication.Models.HospitalPatientDto>
@{
    ViewBag.Title = "Create";
}


<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <h2 class="text-center">New Appointment</h2>
        <form class="form-horizontal" action="/HospitalAppointment/Create" method="POST">

            <div class="form-group">
                <label class="col-sm-4 control-label" for="name">Select Patient</label>
                <div class="col-sm-8">
                    <select name="PatientID">

                        @foreach (var patients in Model)
                        {
                            <option class="form-control" value="@patients.PatientID">@patients.Name</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-4 control-label" for="DateCreated">Created Date</label>
                <div class="col-sm-8">
                    <input class="form-control" type="date" id="DateCreated" name="DateCreated">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="DoctorName">DoctorName</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" id="DoctorName" name="DoctorName">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="Description">Description</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" id="Description" name="Description">
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <button class="btn btn-default" type="submit">Add Appointment</button>
                </div>
            </div>
        </form>
    </div>
</div>
