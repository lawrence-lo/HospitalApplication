@model  HospitalApplication.Models.HospitalAppointmentDto


@{
    ViewBag.Title = "Update Appointment";
}


<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <h2 class="text-center">Update Appointment for Patient @Model.PatientName</h2>
        <form class="form-horizontal" action="/HospitalAppointment/Update/@Model.AppointmentID" method="POST">
            <div style="display:none;">
                <input type="text" name="AppointmentID" value="@Model.AppointmentID">
                <input type="text" name="PatientID" value="@Model.PatientID">
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="DoctorName">DoctorName</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" id="DoctorName" name="DoctorName" value="@Model.DoctorName" disabled>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="DateCreated">Created Date</label>
                <div class="col-sm-8">
                    <input class="form-control" type="date" id="DateCreated" name="DateCreated" value="@Model.DateCreated.ToString("yyyy-MM-dd")">
                </div>
            </div>
    
            <div class="form-group">
                <label class="col-sm-4 control-label" for="Description">Description</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" id="Description" name="Description" value="@Model.Description">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <button class="btn btn-default" type="submit">Update Appointment</button>
                </div>
            </div>
        </form>
    </div>
</div>




