
@{
    ViewBag.Title = "New Patient";
}


<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <h2 class="text-center">New Patient</h2>
        <form class="form-horizontal" action="/HospitalPatient/Create" method="POST">
            <div class="form-group">
                <label class="col-sm-4 control-label" for="Name">Name</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" id="Name" name="Name">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="DOB">DOB</label>
                <div class="col-sm-8">
                    <input class="form-control" type="date" id="DOB" name="DOB" value="@System.DateTime.Now.ToString("yyy-MM-dd")">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="PhoneNo">Phone</label>
                <div class="col-sm-8">
                    <input class="form-control" type="tel" id="PhoneNo" name="PhoneNo" rows="5">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <button class="btn btn-default" type="submit">Add Patient</button>
                </div>
            </div>
        </form>
    </div>
</div>

