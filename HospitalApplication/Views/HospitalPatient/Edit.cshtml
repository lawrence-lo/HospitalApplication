@model HospitalApplication.Models.HospitalPatientDto
@{
    ViewBag.Title = "Update Patient";
}



<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <h2 class="text-center">Update Patient</h2>
        <form class="form-horizontal" action="/HospitalPatient/Update/@Model.PatientID" method="POST">
            <div style="display:none;">

                <input type="text" name="PatientID" value="@Model.PatientID">
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="Name">Name</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" id="Name" name="Name" value="@Model.Name">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="DOB">DOB</label>
                <div class="col-sm-8">
                    <input class="form-control" type="date" id="DOB" name="DOB" value="@Model.DOB.ToString("yyyy-MM-dd")">
                </div>
            </div>
          


            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <button class="btn btn-default" type="submit">Update Patient</button>
                </div>
            </div>
        </form>
    </div>
</div>



