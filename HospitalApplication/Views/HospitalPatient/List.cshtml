@model IEnumerable<HospitalApplication.Models.HospitalPatientDto>
@{
    ViewBag.Title = "List";
}

<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <h2 class="text-center">List of Patients</h2>
        <div class="text-right"><a class="btn btn-default" href="/HospitalPatient/New" role="button">New Patient</a></div>

        @foreach (var patient in Model)
        {
            <h3><a href="">@patient.Name</a></h3>
            <div class="list-group text-center">
                <a href="/HospitalPatient/Details/@patient.PatientID" class="list-group-item">
                    <h4 class="list-group-item-heading">@patient.Name</h4>
                    <p class="list-group-item-text">@patient.DOB</p>
                </a>
            </div>
        }
    </div>
</div>

