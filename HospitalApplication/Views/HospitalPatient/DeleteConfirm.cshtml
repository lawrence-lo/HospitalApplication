@model HospitalApplication.Models.HospitalPatientDto 
@{
    ViewBag.Title = "Delete";
}

<h2>DeleteConfirm</h2>

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <h2>Are you sure you want to delete this Patient?</h2>
        <div class="list-group">
            <div class="list-group-item text-center">
                <h3 class="list-group-item-heading text-center">@Model.Name</h3>
                <p class="list-group-item-text">@Model.PatientID</p>
            </div>
        </div>
        <div class="text-center">
            <form action="/HospitalPatient/Delete/@Model.PatientID" method="POST">
                <button class="btn btn-danger" type="submit">Confirm Delete</button>
                <a class="btn btn-default" href="/HospitalPatient/List" role="button">Cancel</a>
            </form>
        </div>
    </div>
</div>


