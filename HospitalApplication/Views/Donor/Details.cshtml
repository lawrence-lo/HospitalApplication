@model HospitalApplication.Models.ViewModels.DetailsDonor
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="list-group">
            <div class="list-group-item">
                <h2 class="list-group-item-heading text-center">Donor Details</h2>
                <div class="list-group-item-text">
                    <div class="row">
                        <div class="col-sm-4">Name</div>
                        <div class="col-sm-8">@Model.SelectedDonor.DonorName</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">Email address</div>
                        <div class="col-sm-8">@Model.SelectedDonor.DonorEmail</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">Address</div>
                        <div class="col-sm-8">@Model.SelectedDonor.DonorAddress</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">Phone number</div>
                        <div class="col-sm-8">@Model.SelectedDonor.DonorPhone</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center">
    <a class="btn btn-info" href="/Donor/Edit/@Model.SelectedDonor.DonorID" role="button">Update</a>
    <a class="btn btn-danger" href="/Donor/DeleteConfirm/@Model.SelectedDonor.DonorID" role="button">Delete</a>
</div>

<div class="col-md-12 text-center">
    <a class="primary-light" href="/Donor/List">Back to list</a>
</div>