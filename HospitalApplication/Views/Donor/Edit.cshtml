@model HospitalApplication.Models.DonorDto
@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <h2 class="text-center">Update Donor</h2>
        <form class="form-horizontal" action="/Donor/Update/@Model.SelectedDonor.DonorID" method="POST">
            <div style="display:none;">
                @* Pass through the Donor ID *@
                <input type="text" name="DonorID" value="@Model.SelectedDonor.DonorID">
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="Name">Name</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" id="Name" name="Name" value="@Model.SelectedDonor.DonorName">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="Email">Email</label>
                <div class="col-sm-8">
                    <input class="form-control" type="email" id="Email" name="Email" value="@Model.SelectedDonor.DonorEmail">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="Address">Address</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" id="Address" name="Address" value="@Model.SelectedDonor.DonorAddress">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="Phone">Phone</label>
                <div class="col-sm-8">
                    <input class="form-control" type="tel" id="Phone" name="Phone" value="@Model.SelectedDonor.DonorPhone">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <button class="btn btn-default" type="submit">Update Donor</button>
                </div>
            </div>
        </form>
    </div>
</div>
