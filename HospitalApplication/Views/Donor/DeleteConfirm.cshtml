@model HospitalApplication.Models.DonorDto

@{
    ViewBag.Title = "Confirm Delete";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <h2>Are you sure you want to delete this Donor?</h2>
        <div class="list-group">
            <div class="list-group-item text-center">
                <h3 class="list-group-item-heading text-center">@Model.DonorName</h3>
                <p class="list-group-item-text">@Model.DonorEmail</p>
            </div>
        </div>
        <div class="text-center">
            <form action="/Donor/Delete/@Model.DonorID" method="POST">
                <button class="btn btn-danger" type="submit">Confirm Delete</button>
                <a class="btn btn-default" href="/Donor/List" role="button">Cancel</a>
            </form>
        </div>
    </div>
</div>