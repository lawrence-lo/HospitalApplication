@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <h2 class="text-center">New Donor</h2>
        <form class="form-horizontal" action="/Donor/Create" method="POST">
            <div class="form-group">
                <label class="col-sm-4 control-label" for="DonorName">Name</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" id="DonorName" name="DonorName">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="DonorEmail">Email address</label>
                <div class="col-sm-8">
                    <input class="form-control" type="email" id="DonorEmail" name="DonorEmail">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="DonorAddress">Address</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" id="DonorAddress" name="DonorAddress">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="DonorPhone">Phone number</label>
                <div class="col-sm-8">
                    <input class="form-control" type="tel" id="DonorPhone" name="DonorPhone">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <button class="btn btn-default" type="submit">Add Donor</button>
                </div>
            </div>
        </form>
    </div>
</div>
