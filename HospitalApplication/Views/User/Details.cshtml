@model HospitalApplication.Models.ViewModels.DetailsUser
@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="list-group">
            <div class="list-group-item">
                <h2 class="list-group-item-heading text-center">User Details</h2>
                <div class="list-group-item-text">
                    <div class="row">
                        <div class="col-sm-4">Email</div>
                        <div class="col-sm-8">@Model.SelectedUser.Email</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">UserName</div>
                        <div class="col-sm-8">@Model.SelectedUser.UserName</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">Name</div>
                        <div class="col-sm-8">@Model.SelectedUser.GivenName @Model.SelectedUser.LastName</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">Date of Birth</div>
                        <div class="col-sm-8">
                            @if (@Model.SelectedUser.DateOfBirth.Year != 1900)
                            {
                                @Model.SelectedUser.DateOfBirth.ToString("MMM dd, yyyy")
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">Phone Number</div>
                        <div class="col-sm-8">@Model.SelectedUser.PhoneNumber</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">Department</div>
                        @foreach (var department in Model.DepartmentsOptions)
                        {
                            if (department.DeptID == Model.SelectedUser.Department)
                            {
                                <div class="col-sm-8">@department.DeptName</div>
                            }
                            else
                            {
                                <div class="col-sm-8"></div>
                            }
                        }
                    </div>
                    <div class="row">
                        <div class="col-sm-4">Position</div>
                        <div class="col-sm-8">@Model.SelectedUser.Position</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">Hire Date</div>
                        <div class="col-sm-8">
                            @if (@Model.SelectedUser.HireDate.Year != 1900)
                            {
                                @Model.SelectedUser.HireDate.ToString("MMM dd, yyyy")
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">Salary</div>
                        <div class="col-sm-8">$@Model.SelectedUser.Salary</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center">
    <a class="btn btn-info" href="/User/Edit/@Model.SelectedUser.UserID" role="button">Update</a>
    <a class="btn btn-danger" href="/User/DeleteConfirm/@Model.SelectedUser.UserID" role="button">Delete</a>
</div>

<div class="col-md-12 text-center">
    <a class="primary-light" href="/User/List">Back to list</a>
</div>